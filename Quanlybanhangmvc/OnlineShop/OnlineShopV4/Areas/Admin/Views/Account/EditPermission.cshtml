                <div class="checkbox">
                    @Html.EditorFor(model => model.Status_user)
                    @Html.ValidationMessageFor(model => model.Status_user, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

